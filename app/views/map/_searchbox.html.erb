<br id="nav">
  <%= form_tag({controller: "map", action: "search"}, method: "get", class: "search_form") do %>
    <%= label_tag(:src_airport, "Source Airport:") %>
    <%= select_tag(:src_id, options_for_select(OpenAirport.all.collect {|p| [p.name, p.faa]}))%>
    <br/>
    <%= label_tag(:dest_airport, "Destination Airport:") %>
    <%= select_tag(:dest_id, options_for_select(OpenAirport.all.collect {|p| [p.name, p.faa]}))%>
    <p>
      <%= submit_tag("Search") %>
    </p>
  <% end %>
</div>